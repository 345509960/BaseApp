<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HeaderView">

    <LinearLayout
        android:id="@+id/header_layout_leftview_container"
        android:layout_width="@dimen/dp_value_60"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/header_iv_back"
            android:layout_width="@dimen/dp_value_15"
            android:layout_height="@dimen/dp_value_20"
            android:src="@drawable/back"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_layout_middleview_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_layout_middle_title"
            style="@style/HeaderViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="商品详情"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_layout_rightview_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_value_20"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/good_details_iv_share"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/good_details_share"
            android:layout_marginRight="@dimen/dp_value_15"/>
        <RelativeLayout
            android:id="@+id/good_detils_rl_goodcar"
            android:layout_width="@dimen/dp_value_50"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/good_detils_iv_goodcar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_value_10"
                android:src="@drawable/good_datails_goodcar"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/iv_contact_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_value_9"
                android:background="@drawable/good_details_tips"
                android:contentDescription="@null"
                android:gravity="center"
                android:visibility="invisible"
                />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/good_deatils_iv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_value_20"
        android:layout_centerVertical="true"
        android:text="编辑"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_value_16"
        />
</RelativeLayout>