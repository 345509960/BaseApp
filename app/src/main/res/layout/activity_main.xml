<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/header_main1"
            layout="@layout/header" />

        <include
            android:id="@+id/header_main2"
            layout="@layout/titlebar_two" />
    </RelativeLayout>

    <com.yuanyuan.baseapp.view.CustomViewPager
        android:id="@+id/customViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line"
        android:layout_below="@+id/main_ll_title">
    </com.yuanyuan.baseapp.view.CustomViewPager>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/main_buttom_include"
        android:background="@color/gray_line_color" />
    <include
        android:id="@+id/main_buttom_include"
        layout="@layout/main_buttom" />
</RelativeLayout>
