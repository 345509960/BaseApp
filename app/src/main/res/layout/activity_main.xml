<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/header_main1"
            layout="@layout/header" />

        <include
            android:id="@+id/header_main2"
            layout="@layout/titlebar_two" />
    </RelativeLayout>

    <com.yuanyuan.baseapp.view.CustomViewPager
        android:id="@+id/customViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line"
        android:layout_below="@+id/main_ll_title">
    </com.yuanyuan.baseapp.view.CustomViewPager>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg_bottom_layout"
        android:background="@color/gray_line_color" />
    <RadioGroup
        android:id="@+id/rg_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RG_BOTTOM_STYLES"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/RB_BOTTOM_STYLES"
            android:text="@string/text_mainactivity_home"
            android:checked="true"
            android:drawableTop="@drawable/tab_record_selector" />
        <RadioButton
            android:id="@+id/rb_nearby"
            style="@style/RB_BOTTOM_STYLES"
            android:text="@string/text_maincativity_calssify"
            android:drawableTop="@drawable/tab_record_selector" />
        <RadioButton
            android:id="@+id/rb_featured"
            style="@style/RB_BOTTOM_STYLES"
            android:text="@string/text_mianactivity_shopcar"
            android:drawableTop="@drawable/tab_record_selector" />
        <RadioButton
            android:id="@+id/rb_min"
            style="@style/RB_BOTTOM_STYLES"
            android:text="@string/text_mainactivity_mine"
            android:drawableTop="@drawable/tab_record_selector" />
    </RadioGroup>
</RelativeLayout>
